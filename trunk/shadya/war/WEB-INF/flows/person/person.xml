<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<var name="person" class="com.application.model.Person" scope="flow" />

	<start-state idref="savePerson" />

	<view-state id="savePerson" view="/person/person">		
		<transition on="searchPerson" to="searchPerson" />
	</view-state>

	<view-state id="searchPerson" view="person/search">
		<transition on="savePerson" to="savePerson" />
	</view-state>

</flow>