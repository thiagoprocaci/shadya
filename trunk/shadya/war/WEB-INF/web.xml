<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/config/application.xml</param-value>		
	</context-param>
	
	<servlet>
		<servlet-name>Shadya</servlet-name>
		<servlet-class>com.application.ShadyaServlet</servlet-class>
	</servlet>
	
	<filter>
		<filter-name>applitcationFilter</filter-name>
		<filter-class>com.framework.filter.FrameworkFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>applitcationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet-mapping>
		<servlet-name>Shadya</servlet-name>
		<url-pattern>/shadya</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
